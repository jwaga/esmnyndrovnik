<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:focusableInTouchMode="true">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/main_counter"
        android:textSize="24dp"
        android:text="0"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/prostrations"
            android:id="@+id/textView"
            android:layout_alignParentEnd="false"
            android:layout_alignParentStart="false"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="33dp"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+100"
            android:id="@+id/add_repetitions_button"
            android:onClick="onClick"
            android:layout_below="@+id/textView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:longClickable="false"
            android:textSize="26sp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/last_practice"
            android:id="@+id/last_practice_label"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/add_repetitions_button"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2012 XII 12"
            android:id="@+id/date_of_last_practice"
            android:layout_below="@+id/last_practice_label"
            android:layout_centerHorizontal="true"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/pace_label"
            android:id="@+id/pace_label"
            android:layout_below="@+id/date_of_last_practice"
            android:layout_marginTop="36dp"
            android:layout_alignRight="@+id/main_counter"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/finish_date_label"
            android:id="@+id/finish_date_label"
            android:layout_marginTop="36dp"
            android:layout_below="@+id/pace_label"
            android:layout_alignLeft="@+id/pace_label"/>

    <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 May 2013"
            android:id="@+id/date_button"
            android:layout_alignTop="@+id/finish_date_label"
            android:layout_toRightOf="@+id/last_practice_label"
            android:layout_alignBaseline="@+id/finish_date_label"
            android:onClick="onDateClick"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100"
            android:id="@+id/pace_button"
            android:layout_above="@+id/finish_date_label"
            android:layout_alignRight="@+id/date_button"
            android:onClick="onPaceClick"/>

</RelativeLayout>
